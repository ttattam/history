# Database configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/claude_history

# ChromaDB configuration  
CHROMA_URL=http://localhost:8000
CHROMA_COLLECTION_NAME=claude_conversations
CHROMA_MESSAGE_COLLECTION_NAME=claude_messages

# Redis configuration
REDIS_URL=redis://localhost:6379

# OpenAI configuration (optional - falls back to sentence-transformers)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=text-embedding-3-small

# Sentence transformers model (used as fallback)
SENTENCE_TRANSFORMER_MODEL=all-MiniLM-L6-v2

# API configuration
API_V1_STR=/api/v1
PROJECT_NAME=Claude Code History API
PROJECT_VERSION=1.0.0

# Search configuration
MAX_SEARCH_RESULTS=50
SIMILARITY_THRESHOLD=0.7

# Clustering configuration
AUTO_CLUSTER_THRESHOLD=0.8
MIN_CLUSTER_SIZE=2

# Embedding configuration
EMBEDDING_BATCH_SIZE=100
EMBEDDING_DIMENSIONS=384

# Data paths
DATA_DIR=/app/data
EXPORT_DIR=/app/data/exports

# Logging
LOG_LEVEL=INFO

# Security
SECRET_KEY=your-secret-key-change-in-production
ALLOWED_HOSTS=*

# Frontend configuration
REACT_APP_API_URL=http://localhost:8080